{
  "linterOptions": {
    "exclude": [
      "node_modules"
    ]
  },
  "compilerOptions": {
    "esModuleInterop": true,
    "declaration": true,
    "importHelpers": true,
    "module": "commonjs",
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "target": "es2017"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "**/es6BadSyntax.ts",
    "**/index.ts",
    "**/emptyFile.ts",
    "node_modules"
  ],
}